{
  "name": "mdshare-web",
  "version": "1.0.0",
  "description": "MDShare Web - Notion-like Markdown Viewer",
  "private": true,
  "scripts": {
    "dev": "next dev -p 7778",
    "build": "next build",
    "start": "next start -p 7778",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "deploy": "wrangler pages deploy .next",
    "deploy:staging": "wrangler pages deploy .next --env staging",
    "deploy:prod": "wrangler pages deploy .next --env production"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",

{
  "name": "mdshare-web",
  "version": "1.0.0",
  "description": "MDShare Web Interface - AI-powered markdown documentation platform",
  "private": true,
  "scripts": {
    "dev": "next dev -p 7677",
    "dev:cf": "wrangler pages dev --compatibility-date=2024-09-02 --port 7677",
    "build": "next build",
    "pages:build": "npx @cloudflare/next-on-pages",
    "build:cf": "next build && npx @cloudflare/next-on-pages",
    "start": "next start",
    "lint": "next lint",
    "preview": "npm run build:cf && wrangler pages dev",
    "deploy:simple": "npm run pages:build && wrangler pages deploy --project-name=mdshare-web",
    "deploy:production": "npm run pages:build && wrangler pages deploy --project-name=mdshare-web --branch=main",
    "deploy": "./deploy.sh development",
    "deploy:staging": "./deploy.sh staging",
    "deploy:prod": "./deploy.sh production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.11.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@tailwindcss/typography": "^0.5.19",
    "@types/marked": "^5.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "framer-motion": "^11.0.3",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.314.0",
    "marked": "^12.0.0",
    "next": "15.0.0",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.49.3",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.19.20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-syntax-highlighter": "^15.5.11",
    "autoprefixer": "^10.4.17",
    "eslint": "^8",
    "eslint-config-next": "15.0.0",
    "jest": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wrangler": "^3.48.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "MDShare Team",
  "license": "MIT"
}
